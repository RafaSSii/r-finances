<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-sm bg-white p-8 rounded-2xl shadow-lg">
    
    <h1 class="text-2xl font-bold text-center mb-6">Login</h1>

    <%= form_with url: sessions_path, class: "space-y-4" do |f| %>
      <div>
        <label class="block mb-1 font-medium">Email</label>
        <%= f.email_field :email, class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <div>
        <label class="block mb-1 font-medium">Senha</label>
        <%= f.password_field :password, class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <%= f.submit "Entrar", 
          class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg font-semibold" %>
    <% end %>

    <div class="text-center mt-6">
      <p class="text-gray-600 mb-2">NÃ£o tem conta?</p>
      <%= link_to "Criar conta", new_user_path, 
          class: "block w-full py-2 border border-gray-400 rounded-lg hover:bg-gray-100 font-medium" %>
    </div>

  </div>
</div>
